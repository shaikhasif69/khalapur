<!-- viewIndivirualEvents.ejs -->

<%- include('../includes/header.ejs') %>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><%= result.eventName %></h3>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <img src="/poster/<%= result.eventPoster %>" class="img-fluid" alt="Event Poster" onerror="this.onerror=null;this.src='/poster/fallback-poster.png';">
            </div>
            <div class="col-md-6">
              <p class="card-text"><strong>Description:</strong> <%= result.eventDescription %></p>
              <p class="card-text"><strong>Start Date:</strong> <%= result.eventStartDate %></p>
              <p class="card-text"><strong>Start Time:</strong> <%= result.eventStartTime %></p>
              <p class="card-text"><strong>End Date:</strong> <%= result.eventEndDate %></p>
              <p class="card-text"><strong>End Time:</strong> <%= result.eventEndTime %></p>
              <p class="card-text"><strong>Collab Organization:</strong> <%= result.collabOrganizationName %></p>
              <p class="card-text"><strong>Collab Organization Email:</strong> <%= result.collabOrgEmail %></p>
              <p class="card-text"><strong>Organizer Name:</strong> <%= result.organizerName %></p>
              <p class="card-text"><strong>Organizer Email:</strong> <%= result.organizerEmail %></p>
              <p class="card-text"><strong>Organizer Number:</strong> <%= result.organizerNumber %></p>
              <p class="card-text"><strong>WhatsApp Link:</strong> <a href="<%= result.whatsAppLink %>"><%= result.whatsAppLink %></a></p>
              <p class="card-text"><strong>No. of Volunteers Needed:</strong> <%= result.noOfVolunteersNeeded %></p>
              <!-- Displaying the participation certificate -->
              <p class="card-text"><strong>Participation Certificate:</strong></p>
              <img src="/certificateTemplates/<%= result.participationCertificateTemplate %>" class="img-fluid" alt="Participation Certificate" onerror="this.onerror=null;this.src='/certificateTemplates/fallback-certificate.png';">
              <!-- You can add more details as needed -->
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-12">
              <h5>Event Attachments</h5>
              <div class="row">
                <% result.eventAttachment.forEach(function(attachment) { %>
                  <div class="col-md-4 mb-3">
                    <img src="/eventAttachments/<%= attachment %>" class="img-fluid" alt="Event Attachment" onerror="this.onerror=null;this.src='/eventAttachments/fallback-attachment.jpg';">
                  </div>
                <% }); %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../includes/footer.ejs') %>





